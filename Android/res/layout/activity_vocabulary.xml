<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" 
    android:id="@+id/vocabulary_activity">

    <include
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" >
    </include>

    <RelativeLayout
        android:id="@+id/basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:text="title"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </RelativeLayout>

           <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblAP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="美"
                    android:textSize="18dp"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/tvAPhoetic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888" />

                <ImageView
                    android:id="@+id/btnPlayA"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingLeft="3dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/soundoff" />

                <TextView
                    android:id="@+id/lblBP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="英"
                    android:textSize="18dp"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/tvBPhoetic"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#888888" />


				<ImageView
                    android:id="@+id/btnPlayB"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingLeft="3dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/soundoff" />                
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnFamiliar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
        
        <!-- <ImageView
            android:id="@+id/btnPlayB"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/category_1" />  -->

    </RelativeLayout>

    <!-- This title strip will display the currently visible page title, as well as the page titles for adjacent pages. -->

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/basic"
        tools:context=".VocabularyActivity" >

        <!-- android:background="#33b5e5" android:textColor="#fff" -->

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/bg_color"
            android:padding="10dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />
    </android.support.v4.view.ViewPager>

</RelativeLayout>